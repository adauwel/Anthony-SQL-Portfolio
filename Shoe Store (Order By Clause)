--ordering by highest price to lowest price--

SELECT * FROM Ants_shoes ORDER BY price DESC;

--ordering brand name alphabetically--

SELECT * FROM Ants_shoes ORDER BY brand ASC;

--ordering by only Nike--

SELECT * FROM Ants_shoes WHERE brand = 'Nike';

-- ordering by prices less than 100 --

SELECT * FROM Ants_shoes WHERE price <100;

-- ordering by quantity less than 5 --

SELECT * FROM Ants_shoes WHERE quantity <5;
